<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/left_menu_width"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <include
            android:id="@+id/header"
            layout="@layout/layout_left_menu_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/llLabel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llInactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/ten_dp"
                android:visibility="gone">

                <ImageView
                    android:tint="#838383"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home" />

                <com.example.zeeshankhalid.nytimesapiconsumption.views.RobotoLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:text="Most Popular"
                    android:textColor="#838383"
                    android:textSize="@dimen/sp_forteen" />


            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/llActive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/ten_dp">

                <ImageView
                    android:tint="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home" />

                <com.example.zeeshankhalid.nytimesapiconsumption.views.RobotoLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:text="Most Popular"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/sp_forteen" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/llLabel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llLabel1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@id/llInactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/ten_dp"
                android:visibility="visible">

                <ImageView
                    android:tint="#838383"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home" />

                <com.example.zeeshankhalid.nytimesapiconsumption.views.RobotoLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:text="Another Fragment"
                    android:textColor="#838383"
                    android:textSize="@dimen/sp_forteen" />


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@id/llActive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/ten_dp">

                <ImageView
                    android:tint="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home" />

                <com.example.zeeshankhalid.nytimesapiconsumption.views.RobotoLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:text="Another Fragment"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/sp_forteen" />


            </LinearLayout>


        </LinearLayout>


        <com.example.zeeshankhalid.nytimesapiconsumption.views.RobotoLightTextView
            android:id="@+id/tvAppVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/ten_dp"
            android:textColor="#fff"
            android:textSize="@dimen/sp_forteen" />

    </RelativeLayout>

</ScrollView>
